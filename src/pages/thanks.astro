---
import Layout from '../layouts/layout.astro';
const title = 'Thanks — ThreeWords';
const description = 'You’re on the list. We’ll email you when ThreeWords is available.';
---
<Layout {title} {description}>
  <section class="mx-auto max-w-2xl px-6 py-16 text-center">
    <h1 class="text-3xl font-semibold">You’re in!</h1>
    <p class="mt-3 text-gray-600">
      Thanks for joining the waiting list. We’ll email you when it opens and invite interested folks to be beta testers.
    </p>
    <a href="/" class="mt-6 inline-block rounded-lg border px-4 py-2 text-sm text-gray-700 hover:bg-gray-50">
      Back to home
    </a>
  </section>
</Layout>

